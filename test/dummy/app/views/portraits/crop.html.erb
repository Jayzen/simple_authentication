<div class='row'>
  
  <div class='col-md-8'>
    <div class="card">
      <div class="card-header">
         需要裁剪的图片
      </div>
      <div class="card-body">
        <%= image_tag @user.avatar_url(:large), id: "cropbox" %>
        <br>
        <%= form_for(:portrait, url: portrait_path(@user), method: :put) do |f| %>
          <% %w[x y w h].each do |attribute| %>
            <%= f.hidden_field "crop_#{attribute}", id: "portrait_crop_#{attribute}" %>
          <% end %>
          <input type="hidden" name="user_id" value="<%= current_user.id %>" />
          <%= f.submit "提交裁剪", class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class='col-md-4'>
    <div class="card">
      <div class="card-header">
        预览
      </div>
      <div class="card-body">
        <div style="width:100px; height:100px; overflow:hidden">
          <%= image_tag @user.avatar.url(:large), id: "preview" %>
        </div>
      </div>
    </div>
  </div>

</div>


