<div class='row'>
  <div class='col-md-2'>
    <div class="card">
      <div class="card-header text-secondary text-center">
        文章操作
      </div>
      <div class="card-body d-flex flex-column row-hl">
        <div class="p-1 item-hl align-self-center">
          <% if @article.user == current_user %>
            <%= link_to '编辑编辑', edit_article_path(@article), class: "btn btn-outline-secondary" %>
          <% end %>
        </div>
        <div class="p-1 item-hl align-self-center">
          <%= link_to '新建文章', new_article_path, class: "btn btn-outline-secondary" %>
        </div>
        <div class="p-1 item-hl align-self-center">
          <%= link_to "文章列表", articles_path, class: "btn btn-outline-secondary" %> 
        </div> 
      </div>
    </div>
  </div>

  <div class='col-md-10'>
    <div class="card">
      <div class="card-header text-secondary">
        <%= @article.title %>
      </div>
      <div class="card-body">
        <div class="text-secondary">
          <p><small><%= link_to "#{@article.user.name}", user_path(@article.user) %> 发表于<%= time_ago_in_words(@article.created_at) %>前</small></p>
        </div>
        <div class="text-secondary">
          <p><%= @article.content %></p>
        </div>
      </div>
    </div>
  </div>

</div>


