  <%= form_for(@user, url: avatar_create_user_path(@user), method: 'post') do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">用户头像</label>
    <div class="col-sm-10">
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
      <%= f.submit "提交头像", class: "btn btn-primary"%>
    </div> 
  </div>
  <% end %>
