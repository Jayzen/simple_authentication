<table class="table table-sm table-hover table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>标题</th>
      <th>发布时间</th>
      <th>作者</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <th scope="row"><%= article.id %></th>
        <td><%= article.title %></td>
        <td><%= article.updated_at %></td>
        <td>作者</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles %>
