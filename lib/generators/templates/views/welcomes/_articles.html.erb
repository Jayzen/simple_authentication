<table class="table table-sm table-hover table-striped">
  <thead>
    <tr class="text-secondary">
      <th>标题</th>
      <th>发布时间</th>
      <th>作者</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr class="text-secondary">
        <td><%=link_to "#{article.title}", article_path(article), class: "text-secondary" %></td>
        <td><small><%= article.created_at.to_s(:db) %></small></td>
        <td><small><%=link_to "#{article.user.name}", user_path(article.user), class: "text-secondary" %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles %>
