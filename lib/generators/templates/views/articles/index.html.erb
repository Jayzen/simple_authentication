<%= form_tag remove_select_articles_path, method: :delete do %>
  <table class="table table-sm table-hover table-striped">
    <thead>
      <tr class="text-secondary">
        <th></th>
        <th>标题</th>
        <th>发布时间</th>
        <th>编辑</th>
        <th>删除</th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr class="text-secondary">
          <td><%= check_box_tag "[article_ids][]", article.id, false, class: "selectable" %></td>
          <td><%=link_to "#{article.title}", article_path(article), class: "text-secondary" %></td>
          <td><small><%= article.updated_at.to_s(:db) %></small></td>
          <% if current_user == article.user %>
            <td><%= link_to "编辑", edit_article_path(article), class: "btn btn-sm btn-outline-secondary" %></td>
            <td><%= link_to "删除", article, method: :delete, data: { confirm: "确定删除?" }, class: "btn btn-sm btn-outline-secondary" %></td>
          <% end %>
        </tr>
      <% end %>
      <% unless @articles.size == 0 %>
        <td></td>
        <td class="text-secondary">
          <input type="checkbox" id="selectAll"><small>全选或取消&nbsp</small></input>
          <%= submit_tag "删除选中项", class: "btn btn-sm btn-outline-secondary", id: "remove_select" %>
        </td>
        <td></td>
        <td></td>
        <td></td>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= paginate @articles %>

<%= content_for :javascripts do %>
  <script>
      $("#selectAll").select_all();
  </script>
<% end %>
