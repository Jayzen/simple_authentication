<div class='col-md-2'>
  <div class="card">
    <div class="card-header text-secondary text-center">
      文章操作
    </div>
    <div class="card-body d-flex flex-column row-hl">
      <div class="p-1 item-hl align-self-center">
        <%= link_to '新建文章', new_article_path, class: "btn btn-outline-secondary" %>
      </div>
      <div class="p-1 item-hl align-self-center">
        <%= link_to "文章列表", articles_path, class: "btn btn-outline-secondary" %>
      </div>
      <% if @article.user == current_user %>
        <div class="p-1 item-hl align-self-center">
          <%= link_to '编辑文章', edit_article_path(@article), class: "btn btn-outline-secondary" %>
        </div>
        <div class="p-1 item-hl align-self-center">
          <%= link_to "删除文章", @article, method: :delete, data: { confirm: "确定删除?" }, class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
